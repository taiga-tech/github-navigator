{
    "extends": "plasmo/templates/tsconfig.base",
    "compilerOptions": {
        /* Path mapping */
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "exclude": ["node_modules"],
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        ".plasmo/index.d.ts",
        "next-env.d.ts",
        ".next/types/**/*.ts"
    ]
}
